<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >
   <Button
       android:id="@+id/caozuo_fuzhi_zhanghao"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/caozuo_zhanghao"
       android:gravity="center"
       android:background="@drawable/caozuo_button"
       android:textSize="@dimen/Caozuo_button_textsize"
       android:textColor="@color/white"
       />
    <Button
        android:id="@+id/caozuo_fuzhi_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/caozuo_password"
        android:gravity="center"
        android:layout_marginLeft="@dimen/Caozuo_button_margin"
        android:background="@drawable/caozuo_button"
        android:textSize="@dimen/Caozuo_button_textsize"
        android:textColor="@color/white"
        />

</LinearLayout>